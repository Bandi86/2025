# =============================================================================
# TippMixMentor v2 Environment Configuration
# =============================================================================

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tippmixmentor"
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=tippmixmentor
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# JWT Authentication
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# NextAuth Configuration (Frontend)
# =============================================================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# =============================================================================
# API Configuration
# =============================================================================
API_PORT=3001
API_HOST=localhost
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Frontend Configuration
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ML_API_URL=http://localhost:8000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=http://localhost:3001

# =============================================================================
# ML Service Configuration
# =============================================================================
ML_SERVICE_PORT=8000
ML_SERVICE_HOST=localhost
ML_SERVICE_URL=http://localhost:8000
MODEL_PATH=./prediction_model/models
DATA_PATH=./prediction_model/data

# =============================================================================
# Agent OS Configuration
# =============================================================================
AGENT_OS_PORT=8001
AGENT_OS_HOST=localhost
AGENT_OS_URL=http://localhost:8001
AGENT_OS_DEBUG=true
AGENT_OS_LOG_LEVEL=INFO
AGENT_OS_ENABLE_METRICS=true
AGENT_OS_MAX_PREDICTIONS_PER_REQUEST=50
AGENT_OS_PREDICTION_CONFIDENCE_THRESHOLD=0.7
AGENT_OS_MAX_RETRIES=3
AGENT_OS_RETRY_DELAY=1.0

# =============================================================================
# External APIs
# =============================================================================
ESPN_API_KEY=your-espn-api-key
ESPN_API_BASE_URL=https://site.api.espn.com/apis/site/v2/sports/soccer

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@tippmixmentor.com

# =============================================================================
# File Upload Configuration
# =============================================================================
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# =============================================================================
# Monitoring Configuration
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3002

# =============================================================================
# Development Configuration
# =============================================================================
NODE_ENV=development
DEBUG=true
ENABLE_SWAGGER=true

# =============================================================================
# Production Configuration
# =============================================================================
# NODE_ENV=production
# DEBUG=false
# ENABLE_SWAGGER=false 