{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "detailed": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(filename)s:%(lineno)d - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "simple": {
      "format": "%(asctime)s - %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "json": {
      "class": "pythonjsonlogger.jsonlogger.JsonFormatter",
      "format": "%(asctime)s %(name)s %(levelname)s %(filename)s %(lineno)d %(message)s"
    }
  },
  "handlers": {
    "console": {
      "class": "logging.StreamHandler",
      "level": "INFO",
      "formatter": "simple",
      "stream": "ext://sys.stdout"
    },
    "processing_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "logs/processing/processing.log",
      "maxBytes": 10485760,
      "backupCount": 5,
      "encoding": "utf-8"
    },
    "api_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "INFO",
      "formatter": "detailed",
      "filename": "logs/api/api.log",
      "maxBytes": 10485760,
      "backupCount": 3,
      "encoding": "utf-8"
    },
    "error_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "ERROR",
      "formatter": "detailed",
      "filename": "logs/debug/errors.log",
      "maxBytes": 5242880,
      "backupCount": 3,
      "encoding": "utf-8"
    },
    "debug_file": {
      "class": "logging.handlers.RotatingFileHandler",
      "level": "DEBUG",
      "formatter": "detailed",
      "filename": "logs/debug/debug.log",
      "maxBytes": 10485760,
      "backupCount": 3,
      "encoding": "utf-8"
    }
  },
  "loggers": {
    "converter": {
      "level": "INFO",
      "handlers": ["console", "processing_file", "error_file"],
      "propagate": false
    },
    "football_processing": {
      "level": "INFO",
      "handlers": ["console", "processing_file", "error_file"],
      "propagate": false
    },
    "api": {
      "level": "INFO",
      "handlers": ["console", "api_file", "error_file"],
      "propagate": false
    },
    "automation": {
      "level": "INFO",
      "handlers": ["console", "processing_file", "error_file"],
      "propagate": false
    }
  },
  "root": {
    "level": "INFO",
    "handlers": ["console", "error_file"]
  }
}
