# Football Automation System - Environment Configuration
# Copy this file to .env and customize the values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=football_automation
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password
POSTGRES_PORT=5432

# Full database URL (alternative to individual settings)
DATABASE_URL=postgresql://postgres:your_secure_postgres_password@postgres:5432/football_automation

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_PASSWORD=your_secure_redis_password
REDIS_PORT=6379

# Full Redis URL (alternative to individual settings)
REDIS_URL=redis://:your_secure_redis_password@redis:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_PORT=8000
API_WORKERS=2
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-change-this-in-production

# =============================================================================
# WEB DOWNLOADER CONFIGURATION
# =============================================================================
SOURCE_URL=https://example.com/football-data
DOWNLOAD_INTERVAL=3600

# =============================================================================
# PROCESSING CONFIGURATION
# =============================================================================
MAX_CONCURRENT_JOBS=2
PROCESSING_TIMEOUT=300
WORKER_REPLICAS=1

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
WEBHOOK_URLS=

# =============================================================================
# EMAIL CONFIGURATION (Optional)
# =============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=

# =============================================================================
# UI CONFIGURATION
# =============================================================================
DASHBOARD_PORT=8501
HTTP_PORT=80
HTTPS_PORT=443

# =============================================================================
# MONITORING SERVICES (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_PASSWORD=admin

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# SSL Certificate paths (if using HTTPS)
SSL_CERT_PATH=./docker/ssl/cert.pem
SSL_KEY_PATH=./docker/ssl/key.pem

# API Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File upload limits
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=pdf

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=
BACKUP_S3_ACCESS_KEY=
BACKUP_S3_SECRET_KEY=